<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6f000000"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/expnTvDate"
        android:gravity="center"
        android:text="20-15-2016 15:00"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/colorETFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_weight="2"
            android:id="@+id/expnTvName"
            android:text="Cox's Bazar"
            android:textStyle="bold"
            android:textSize="@dimen/tvBudgetRowFontSize"
            android:textColor="@color/colorETFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/expnTvAmount"
            android:gravity="right"
            android:text="500"
            android:textStyle="bold"
            android:textSize="@dimen/tvBudgetRowFontSize"
            android:textColor="@color/colorETFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>